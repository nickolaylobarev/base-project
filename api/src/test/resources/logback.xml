<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%n%date [%level] - %message%n%xException</pattern>
        </encoder>
    </appender>

    <logger name="org.junit" level="info"/>

    <root level="info">
        <appender-ref ref="stdout"/>
    </root>
</configuration>